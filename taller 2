int* randomarray(int n) {
    
    int* arr =  int[n];

    // para crear los valores aleatorios del 0 al 20
    srand(time(NULL));
    for (int i = 0; i < n; i++) {
        array[i] = rand() % 21;
    }

    return array;
}

